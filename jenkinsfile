pipeline {
    agent any
    tools {
        maven 'Maven 3.8.1'  // Make sure Maven is installed in Jenkins
        jdk 'JDK 23'     // Ensure Java is installed
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/19-40467-1MuradMisu/TMS_NEW.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Publish Reports') {
            steps {
                 allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
            }
        }
    }
}
